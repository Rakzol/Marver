<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFinalizarPedido"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/fondo_redondo"
    android:padding="15dp"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageResultadoFinalizarPedido"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/correcto" />

        <ProgressBar
            android:id="@+id/progressFinalizarPedido"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <EditText
            android:id="@+id/textCodigoFinalizarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonFinalizarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Finalizar" />

        <Button
            android:id="@+id/buttonCerrarFinalizarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Cerrar"
            android:visibility="gone" />

</LinearLayout>