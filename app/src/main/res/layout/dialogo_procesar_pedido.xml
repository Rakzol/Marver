<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutProcesarPedido"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/fondo_redondo"
    android:padding="15dp"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageResultadoProcesarPedido"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/correcto" />

        <ProgressBar
            android:id="@+id/progressProcesarPedido"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textResultadoProcesarPedido"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:text="Asignando Pedido. . ."
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCerrarProcesarPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Aceptar" />

</LinearLayout>