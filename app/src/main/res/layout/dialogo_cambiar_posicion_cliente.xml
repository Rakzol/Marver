<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenedorAsignarPedido"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/fondo_redondo"
    android:padding="15dp"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCambiarPosicionCliente"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Â¿Desea cambiar la posicion del cliente?"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCambairPosicionClienteCambiar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:text="Cambiar" />

                <Button
                    android:id="@+id/btnCambairPosicionClienteCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="Cancelar" />
        </LinearLayout>

</LinearLayout>